{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app.js"
    }
  ],
  "env": {
    "PORT": "3000",
    "CLIENT_URL": "http://localhost:3000",
    "MONGO_URL": "your_mongo_db_connection_string"
  }
}
